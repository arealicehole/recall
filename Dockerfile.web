# Efficient Dockerfile for Recall Web API
FROM python:3.11-slim

# Install only essential system dependencies
RUN apt-get update && apt-get install -y \
    ffmpeg \
    curl \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user for security
RUN groupadd -r recall && useradd -r -g recall recall

# Set work directory
WORKDIR /app

# Copy requirements and install Python dependencies
COPY requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy project files
COPY . .

# Create necessary directories and set permissions
RUN mkdir -p /app/transcripts /app/uploads /app/config \
    && chown -R recall:recall /app

# Switch to non-root user
USER recall

# Expose Flask port
EXPOSE 5000

# Health check using the API status endpoint
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:5000/api/status || exit 1

# Set environment variables for production
ENV PYTHONUNBUFFERED=1
ENV FLASK_ENV=production

# Run the Flask web API directly
CMD ["python", "run_web.py"] 